/* components/song-item-v1/song-item-v1.wxss */
.song-item {
  display: flex;
  margin: 16rpx 0;
  align-items: center;
}

.song-item .image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
}
.song-item .content {
  margin-left: 16rpx;
  flex: 1;
}

.content .name {
  font-size: 32rpx;
  color: #555;
}
.content .source {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}