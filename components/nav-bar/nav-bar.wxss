/* components/nav-bar/nav-bar.wxss */

.nav {
  display: flex;
  height: 44px;
  color: #fff;
}
.nav .left, .nav .right, .nav .center {
  display: flex;
  justify-content: center;
  align-items: center;
}
.nav .left, .nav .right {
  width: 120rpx;
}
.nav .center {
  flex: 1;
}

.left .icon {
  width: 40rpx;
  height: 40rpx;
}

.center {
  text-align: center;
}


.default {
  display: none;
}

.slot:empty + .default {
  display: flex;
}


