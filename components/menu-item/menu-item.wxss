/* components/menu-item/menu-item.wxss */

.top {
  position: relative;
}
.top .image {
  width: 100%;
  border-radius: 12rpx;
}
.top .count {
  position: absolute;
  right: 0;
  bottom: 10rpx;
  padding: 6rpx 10rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #fff;
  background: rgba(0, 0, 0, .5);
}

.bottom {
  width: 100%;
  font-size: 26rpx;

  display: -webkit-box; 
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}