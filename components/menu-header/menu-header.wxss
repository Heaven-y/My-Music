/* components/menu-header/menu-header.wxss */
.content {
  position: relative;
  box-sizing: border-box;
  height: 450rpx;
  color: #fff;
}
.bg-img {
  position: absolute;
  z-index: -2;
  width: 100%;
  height: 100%;
}
.bg-cover {
  position: absolute;
  z-index: -1;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0, 0, 0, .5);
  backdrop-filter: blur(5px);
}

.album {
  display: flex;
  padding: 60rpx 30rpx 0;
}
.album .image {
  width: 220rpx;
  height: 220rpx;
  border-radius: 16rpx;
}
.album .info {
  position: relative;
  flex: 1;
  margin-left: 26rpx;
}
.album .info .anthor {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}
.album .info .anthor .avatar {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
}
.album .info .anthor .name {
  font-size: 24rpx;
  margin-left: 16rpx;
}
.album .info .desc {
  position: absolute;
  width: 100%;

  margin-top: 30rpx;

  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 24rpx;
}


.operation {
  display: flex;
  justify-content: space-around;
  margin-top: 50rpx;
  padding: 0 30rpx;

}
.operation .item {
  display: flex;
  align-items: center;
}
.operation .icon {
  width: 48rpx;
  margin-right: 8rpx;
}
.operation .text {
  font-size: 28rpx;
}